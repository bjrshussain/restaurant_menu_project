def check1():
    if intvar1.get() == 1:
        aptzrs_btn1.configure(fg=checked_color)
        aptzrs_btn1Entry.configure(fg=checked_color, state=NORMAL)
        stvar1.set('1')
    elif intvar1.get() == 0:
        aptzrs_btn1.configure(fg="black")
        aptzrs_btn1Entry.configure(fg="black", state=DISABLED)
        stvar1.set(0)


