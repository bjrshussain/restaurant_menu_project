def quit_root():
    yes_no = messagebox.askyesno('Quit!', "Do you want to close the app?")
    if yes_no > 0:
        root.destroy()


def calculate():
    food1 = stvar1.get()
    food2 = stvar2.get()
    food3 = stvar3.get()
    food4 = stvar4.get()
    food5 = stvar5.get()
    food6 = stvar6.get()
    food7 = stvar7.get()
    food8 = stvar8.get()
    food9 = stvar9.get()
    food10 = stvar10.get()
    food11 = stvar11.get()
    food12 = stvar12.get()
    food13 = stvar13.get()
    food14 = stvar14.get()
    food15 = stvar15.get()
    food16 = stvar16.get()
    food17 = stvar17.get()
    food18 = stvar18.get()
    food19 = stvar19.get()
    food20 = stvar20.get()
    food21 = stvar21.get()
    food22 = stvar22.get()
    food23 = stvar23.get()
    food24 = stvar24.get()
    food25 = stvar25.get()
    food26 = stvar26.get()
    food27 = stvar27.get()
    food28 = stvar28.get()
    food29 = stvar29.get()
    food30 = stvar30.get()

    #get the totals/tip and add them and calculate tax and calculate subtotal

    total_aaptzrs = float(food1) * 4.99 + float(food2) * 1.99 + float(
        food3) * 4.79 + float(food4) * 1.89 + float(food5) * 2.49

    total_drinks = float(food6) * 1.99 + float(food7) * 1.99 + float(
        food8) * 3.99 + float(food9) * 3.99 + float(food10) * 4.99

    total_lunch = float(food11) * 6.50 + float(food12) * 6.50 + float(
        food13) * 10.79 + float(food14) * 10.99 + float(food15) * 8.99

    total_dinner = float(food16) * 11.99 + float(food17) * 7.99 + float(
        food18) * 9.99 + float(food19) * 8.99 + float(food20) * 7.99

    total_dessert = float(food21) * 3.99 + float(food22) * 2.99 + float(
        food23) * 3.99 + float(food24) * 3.99 + float(food25) * 3.49

    total_sides = float(food26) * 1.49 + float(food27) * 1.99 + float(
        food28) * 1.99 + float(food29) * 1.99 + float(food30) * 1.49

    foodtotal = total_aaptzrs + total_drinks + total_lunch + total_dinner + total_dessert + total_sides
    foodtotal = format(foodtotal, '.2f')

    if tipvar.get() == '':
        tips = 0
    else:
        tips = tipvar.get()
    tips_total = float(tips)

    taxtotal = float(foodtotal) * 8.25 / 100
    taxtotal = format(taxtotal, '.2f')

    subtotals = float(foodtotal) + float(taxtotal) + float(tips_total)
    subtotals = format(subtotals, '.2f')

    receipt.config(state=NORMAL)
    receipt.delete('1.0', 'end')
    receipt.config(state=DISABLED)

    #display totals in thier filds
    foodcostvar.set('$' + foodtotal)
    vartax.set('$' + taxtotal)
    varsubtotals.set('$' + subtotals)
    subtotals = float(subtotals)

    subtotal_WDS = varsubtotals.get()
    subtotal = subtotal_WDS.replace('$', '')

    subtotal = float(subtotal)

    if cashvar.get() == '':
        cashpaid = 0
    else:
        cashpaid = cashvar.get()

        cashpaid = float(cashpaid)

    cashvstotal = cashpaid - subtotal
    cashvstotal = float(cashvstotal)

    if cashvstotal == 0:
        duevar.set('$0.00')
        changevar.set('$0.00')
    elif cashvstotal > 0:
        duevar.set(0)
        changevar.set('$' + str(format(cashvstotal, '.2f')))
    elif cashvstotal < 0:
        cashvstotal = cashvstotal * -1
        duevar.set('$' + str(format(cashvstotal, '.2f')))
        changevar.set('$0.00')


def paid():

    subtotal_WDS = varsubtotals.get()
    subtotal = subtotal_WDS.replace('$', '')

    subtotal = float(subtotal)

    if cashvar.get() == '':
        cashpaid = 0
    else:
        cashpaid = cashvar.get()

        cashpaid = float(cashpaid)

    cashvstotal = cashpaid - subtotal
    cashvstotal = float(cashvstotal)

    if cashvstotal == 0:
        duevar.set('$0.00')
        changevar.set('$0.00')
    elif cashvstotal > 0:
        duevar.set('$0.00')
        changevar.set('$' + str(format(cashvstotal, '.2f')))
    elif cashvstotal < 0:
        cashvstotal = cashvstotal * -1
        duevar.set('$' + str(format(cashvstotal, '.2f')))
        changevar.set('$0.00')


# ==========receipt========-=======================
def get_receipt():

    if varsubtotals.get() == '$0.00':
        messagebox.showinfo(
            title='Error',
            message=
            'Error! Select food items and press CALCULATE before generating receipt.'
        )
    else:
        receipt.config(state=NORMAL)
        receipt.delete('1.0', 'end')
        receipt_total = 0
        if intvar1.get() == 1:
            q = stvar1.get()
            q = float(q)
            value = q * 4.99
            receipt_total = receipt_total + value
            value = format(value, '.2f')
            receipt.insert('1.0',
                           '\nBhel Puri\t\t' + str(q) + '\t\t' + '$' + value)

        if intvar2.get() == 1:
            q = stvar2.get()
            q = float(q)
            value = q * 1.99
            receipt_total = receipt_total + value
            value = format(value, '.2f')
            receipt.insert(
                INSERT, '\nKeema Samosa\t\t' + str(q) + '\t\t' + '$' + value)

        if intvar3.get() == 1:
            q = stvar3.get()
            q = float(q)
            value = q * 4.79
            receipt_total = receipt_total + value
            value = format(value, '.2f')
            receipt.insert(INSERT,
                           '\nSamosa Chat\t\t' + str(q) + '\t\t' + '$' + value)

        if intvar4.get() == 1:
            q = stvar4.get()
