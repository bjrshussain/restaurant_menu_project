#=============== Receipt===================================

ref = random.randint(1000, 9999)
ordernumber = str(ref)

var_receipt = StringVar()

rcpt_head_frame = Frame(rcp_frame, bg=content_1, width=400, height=200)
rcpt_head_frame.pack(side='top')

rcpt_item_frame = Frame(rcp_frame, bg=content_1, width=400, height=800)
rcpt_item_frame.pack(side='top')

rcpt_paid_frame = Frame(rcp_frame, bg=content_1, width=400, height=200)
rcpt_paid_frame.pack(side='bottom')

receipthead = Text(rcpt_head_frame,
                   font='arial 10 italic',
                   bg=content_1,
                   width=45,
                   height=6)
receipthead.pack(expand=True, fill='both')
receipthead.insert(
    INSERT,
    '\t     INDO-PAK FOOD PALACE\n             9449 Briar Forest Dr Houston TX 77063\n\n'
)

receipt = Text(rcpt_item_frame,
               font='arial 10 italic',
               bg=content_1,
               width=45,
               height=40)
receipt.pack(expand=True, fill='both')

receipthead.insert(INSERT, 'Order Number: ' + 'MTX' + ordernumber)
receipthead.insert(INSERT, '\n\nItem\t\tQty\t\tAmount\n')

receipthead.config(state=DISABLED)

btn_recpt = Button(rcpt_paid_frame,
                   width=15,
                   bg=content_1,
                   font='comic 20 bold',
                   text='GET RECEIPT',
                   command=get_receipt)
btn_recpt.pack(side='top', anchor=N)

root.mainloop()
